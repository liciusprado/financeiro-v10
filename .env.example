# ═══════════════════════════════════════════════════════
#           CONFIGURAÇÃO DO AMBIENTE - v10.12
# ═══════════════════════════════════════════════════════

# ========== DATABASE ==========
DATABASE_URL="mysql://root:password@localhost:3306/financeiro_v10"
DB_HOST="localhost"
DB_PORT="3306"
DB_USER="root"
DB_PASSWORD="password"
DB_NAME="financeiro_v10"

# ========== SERVER ==========
NODE_ENV="development"
PORT="3000"
API_URL="http://localhost:3000"
CLIENT_URL="http://localhost:5173"

# ========== JWT ==========
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production-min-32-chars"
JWT_REFRESH_EXPIRES_IN="30d"

# ========== REDIS (CACHE) ==========
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
CACHE_TTL="3600"

# ========== SESSION ==========
SESSION_SECRET="your-super-secret-session-key-change-this-in-production-min-32-chars"
SESSION_MAX_AGE="86400000"

# ========== EMAIL ==========
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
EMAIL_FROM="Financeiro App <noreply@financeiro.app>"

# ========== 2FA ==========
TWO_FACTOR_APP_NAME="Financeiro App"
TWO_FACTOR_ISSUER="Financeiro"

# ========== SECURITY ==========
BCRYPT_ROUNDS="10"
MAX_LOGIN_ATTEMPTS="5"
LOCKOUT_TIME="900000"
RATE_LIMIT_WINDOW="900000"
RATE_LIMIT_MAX="100"

# ========== CORS ==========
CORS_ORIGIN="http://localhost:5173"
CORS_CREDENTIALS="true"

# ========== FILE UPLOAD ==========
MAX_FILE_SIZE="10485760"
UPLOAD_DIR="./uploads"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# ========== OPEN BANKING (BELVO) ==========
BELVO_SECRET_ID=""
BELVO_SECRET_PASSWORD=""
BELVO_ENVIRONMENT="sandbox"

# ========== CURRENCY API ==========
CURRENCY_API_KEY=""
CURRENCY_API_URL="https://api.exchangerate-api.com/v4/latest"

# ========== BACKUP ==========
BACKUP_DIR="./backups"
BACKUP_RETENTION_DAYS="30"
AUTO_BACKUP_ENABLED="true"
AUTO_BACKUP_HOUR="2"

# ========== NOTIFICATIONS ==========
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_PUSH_NOTIFICATIONS="false"
VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""

# ========== FEATURES FLAGS ==========
ENABLE_GAMIFICATION="true"
ENABLE_OPEN_BANKING="false"
ENABLE_COLLABORATION="true"
ENABLE_2FA="true"
ENABLE_AUDIT_LOGS="true"
ENABLE_CREDIT_CARDS="true"
ENABLE_INVESTMENTS="true"
ENABLE_LOANS="true"
ENABLE_BILL_SPLITTING="true"
ENABLE_RECURRING_DETECTION="true"
ENABLE_ANALYTICS="true"
ENABLE_SIMULATIONS="true"
ENABLE_EXPORT="true"

# ========== PERFORMANCE ==========
ENABLE_CACHE="true"
ENABLE_COMPRESSION="true"
ENABLE_QUERY_OPTIMIZER="true"

# ========== DEVELOPMENT ==========
DEBUG="false"
ENABLE_API_DOCS="true"
ENABLE_PLAYGROUND="true"
